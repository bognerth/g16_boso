<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "G16 - Höhere Technikschule" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
        <!-- Nav Bar -->
 
  <div class="row">
    <div class="large-12 columns">
      <div class="nav-bar right">
        <% if current_user %>
          Logged in as <%= current_user.lastname %> | <%= link_to "Log Out", logout_path %>
        <% else %>
          <%= link_to "Log In", login_path %>
        <% end %>
      </div>
      <h1><%= image_tag('g16_logo-green.png', :size => '280x100', title: "Höhere Technikschule - G16 Farmsen") %>
        <small>Höhere Technikschule</small>
      </h1>
      <% unless current_user %>
        <hr />
      <% else %>
        <nav class="top-bar" data-topbar>


          <section class="top-bar-section">

            <!-- Right Nav Section -->
            <ul class="right">
              <li><%= link_to 'Benutzerverwaltung', users_path %></li>
              <li class="active"><%= link_to 'Fachbereiche', departments_path %></li>

            </ul>

            <!-- Left Nav Section -->
            <ul class="left">
              <li><%= link_to "Neuen Betrieb", new_company_path %></li>
              <li><%= link_to "Alle Betriebe", companies_path %></li>
              <li class="has-dropdown">
                <a href="#">Filter</a>
                <ul class="dropdown">
                  <li><a href="#">Filter</a></li>
                </ul>
              </li>
            </ul>
          </section>
        </nav>
      <% end %>
    </div>
  </div>
 
  <!-- End Nav -->
 
 
  <!-- Main Page Content and Sidebar -->
 
  <div class="row">
 
    <!-- Main Blog Content -->
    <div class="large-12 columns" role="content">
 
      <% if notice %><div class="alert-box success"><%= notice %><a href="#" class="close">&times;</a></div><% end %>
      <% if alert %><div class="alert-box alert"><%= alert %><a href="#" class="close">&times;</a></div><% end %>
      
      <%= yield %>
    
    </div>
 
    <!-- End Main Content -->
 
  </div>
 
  <!-- End Main Content and Sidebar -->
 
 
  <!-- Footer -->
 
  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>© Thomas Bogner 2013.</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
    
    
    
    
    <%= javascript_include_tag "application" %>
  </body>
</html>
